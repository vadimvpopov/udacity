{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "type": "commonjs",
  "scripts": {
    "start": "node ./build/server.js",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./build --onSuccess \"node ./build/server.js\"",
    "dev": "db-migrate up && npx ts-node-dev --respawn --transpile-only ./src/server.ts",
    "prod": "npx tsc && node ./www/server.js",
    "clean": "rm -rf build/ || true",
    "build": "npm install . && npm run clean && tsc && cp -rf src/config build/config && cp -R .elasticbeanstalk build/.elasticbeanstalk && cp .npmrc build/.npmrc && cp package.json build/package.json && cp database.json build/database.json && cd build && zip -r Archive.zip . && cd ..",
    "deploy": "npm run build && eb list && eb use demo-app-dev && eb deploy && db-migrate up --env prod",
    "test": "jasmine-ts",
    "tsc": "tsc",
    "full_test": "ENV=test && npm run tsc && db-migrate up --env test && jasmine && db-migrate down --env test -c 5",
    "tst": "jasmine"
  },
  "author": "Udacity",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.5.1",
    "sequelize": "^6.37.5",
    "sequelize-cli": "^6.6.2",
    "sequelize-typescript": "^2.1.6",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.9",
    "@types/jasmine": "^5.1.4",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/pg": "^7.14.7",
    "@types/supertest": "^6.0.2",
    "jasmine": "^5.3.1",
    "jasmine-spec-reporter": "^7.0.0",
    "jasmine-ts": "^0.3.0",
    "supertest": "^7.0.0",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9"
  }
}
